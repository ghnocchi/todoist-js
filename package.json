{
  "name": "todoist-js",
  "version": "0.4.0",
  "description": "The (un)official Todoist javascript API library",
  "main": "dist/index.js",
  "scripts": {
    "test": "jest",
    "test:unit": "yarn test tests/unit",
    "lint": "eslint src",
    "build": "rm -rf dist/ && babel -d dist/ src/ --source-maps"
  },
  "keywords": [
    "todoist",
    "todoist-api",
    "javascript"
  ],
  "author": "cosmitar",
  "license": "ISC",
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": "current"
          }
        }
      ]
    ],
    "env": {
      "development": {
        "ignore": [
          "**/__tests__",
          "**/*.test.js"
        ]
      }
    }
  },
  "jest": {
    "roots": [
      "<rootDir>/tests/"
    ],
    "testMatch": [
      "<rootDir>/tests/**/*.test.[jt]s?(x)"
    ]
  },
  "devDependencies": {
    "@babel/cli": "^7.7.7",
    "@babel/core": "^7.7.7",
    "@babel/preset-env": "^7.7.7",
    "babel-eslint": "^10.0.3",
    "babel-jest": "^24.9.0",
    "dotenv": "^8.2.0",
    "eslint": "^6.8.0",
    "eslint-plugin-jest": "^23.2.0",
    "jest": "^24.9.0"
  },
  "dependencies": {
    "fetch-everywhere": "^1.0.5"
  },
  "repository": "git+https://github.com/Cosmitar/todoist-js.git"
}
