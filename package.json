{
  "name": "todoist-js",
  "version": "0.4.0",
  "description": "The (un)official Todoist javascript API library",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "test": "jest",
    "test:unit": "yarn test tests/unit",
    "lint": "eslint src",
    "build": "webpack"
  },
  "keywords": [
    "todoist",
    "todoist-api",
    "javascript"
  ],
  "author": "cosmitar",
  "license": "ISC",
  "babel": {
    "presets": [
      "@babel/preset-typescript",
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": "current"
          }
        }
      ]
    ]
  },
  "jest": {
    "roots": [
      "<rootDir>/tests/"
    ],
    "testMatch": [
      "<rootDir>/tests/**/*.test.[jt]s?(x)"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.7.7",
    "@babel/preset-env": "^7.7.7",
    "@babel/preset-typescript": "^7.8.3",
    "@types/jest": "^24.9.0",
    "@typescript-eslint/eslint-plugin": "^2.16.0",
    "@typescript-eslint/parser": "^2.16.0",
    "awesome-typescript-loader": "^5.2.1",
    "dotenv": "^8.2.0",
    "eslint": "^6.8.0",
    "eslint-plugin-jest": "^23.2.0",
    "jest": "^24.9.0",
    "source-map-loader": "^0.2.4",
    "ts-loader": "^6.2.1",
    "typescript": "^3.7.4",
    "webpack": "^4.41.5",
    "webpack-cli": "^3.3.10"
  },
  "dependencies": {
    "axios": "^0.19.1"
  },
  "repository": "git+https://github.com/Cosmitar/todoist-js.git"
}
